port 465
from pmooney@pfmooney.com
auth plain
user pmooney@pfmooney.com
passwordeval gpg2 -dq ~/.mailpw.gpg | awk -F'\t' '$1 = "pmooney@pfmooney.com" {print $2}'

account default: pmooney@pfmooney.com
